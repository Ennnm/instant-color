<div class="flex-column
d-block 
d-sm-inline-block
col-12
col-sm-3
col-lg-2
pt-1
">
  <h4 class='d-none d-sm-block'>Categories</h4>
    <% categoriesObj.forEach((category)=>{ %>
    <a class="btn btn-outline-success btn-sm m-1 d-inline-block rounded-pill" href="#category-<%=category.id%>" ><%=category.category%></a>
    <% }) %>
</div>
<div
  data-bs-spy="scroll"
  data-bs-target="#category-bar"
  data-bs-offset="0"
  tabindex="0"
  class="d-sm-inline-block row col-12 col-sm-9 col-lg-10  mx-0 ">
  <% categoriesObj.forEach((category)=>{ %>
  <div id="category-<%=category.id%>" class="card-body mt-2 mb-4 pt-sm-3 p-1 p-sm-3 bg-transparent  " style="border: Silver solid 2px; border-radius:20px; " >
    <h4 class="text-center " ><%=category.category %></h4>
    <div class="row" >
      <% category.posts.forEach((post, index)=>{%>
      <div class=" col-12 col-lg-6 col-xl-4 mb-4 " >
        <%-include('image-card', post, enableDelete); -%>
      </div>
      <% }) %>
    </div>
  </div>
  <% }) %>
</div>