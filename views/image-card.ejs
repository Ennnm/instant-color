  <script>
  
    function CopyToClipboard(id)
    {
    var r = document.createRange();
    r.selectNode(document.getElementById(id));
    window.getSelection().removeAllRanges();
    window.getSelection().addRange(r);
    document.execCommand('copy');
    window.getSelection().removeAllRanges();
    }

    $(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();
  

}); 
</script>

<div class="card bg-light border text-center  " id="item-<%=id%>">
  <div>
    <div class="card-header" style="background-color: <%=colTemplates[0][0]+70%> ">
        <div class=" d-flex justify-content-between">
          <span>Hue: <%=hue%>/360</span>
           <span>Created <%=createdat.toISOString().split('T')[0]%></span>
        </div>
        <div class=" d-flex justify-content-between">
          <span><%=baseHarmony%></span>
          <span>Δ <%=harmonicDiff[0]%></span>
        </div>
    </div> 
    <!-- category -->
    <div class="card-body justify-conent-center  ">
        <img src="../<%= imageSrc %>" class="img-fluid " alt="target-image"class="target-img">
      
        <% harmonies.forEach((h, index)=>{ %> 
          <div class="row swatches  mt-1 mx-auto">
            <% colTemplates[index].forEach((color, index2)=>{ %>
              <div class="swatch" style="background-color: <%=color%>">
                <span class="swatch-text " id=<%=`${id}${index}${index2}`%> onclick="CopyToClipboard('<%=`${id}${index}${index2}`%>');return false;" data-toggle="tooltip" data-placement="bottom" title="copy#"><%=color%></span>
              </div>
            <% }) %> 
           
          </div>
          <div class="row-fluid d-flex justify-content-between">
            <span><%=h%></span>
            <span>Δ <%=harmonicDiff[index]%></span>
          </div>
       <% }) %>

    </div>
    <div class="card-footer d-flex justify-content-end"  >
        <div class="btn-group flex-wrap ">
            <a
              href="/picture/<%=id%>"
              class="btn btn-outline-secondary btn-sm stretched-link "
              
              >Expand</a
            >
            <a
              href="/picture/<%=id%>/fav"
              class="btn btn-outline-secondary btn-sm"
              >Favorite</a
            >
            <% if(locals.enableDelete===true){ %>
            <form
              action="/picture/<%=id%>/delete?_method=DELETE"
              method="POST"
              class="d-inline-block"
            >
              <input
                type="submit"
                value="Delete"
                id="delete"
                class="btn btn-outline-secondary btn-sm"
                style="border-radius: 0"
              />
            </form>
            <% } %>
          </div>
    </div>
  </div>
</div>
</div>