<%- include('header', {title: `Birding notes`}); -%>
  <body >
   <%- include('nav', locals.numVisitors); -%>
   <div class=" card-columns">
    <% locals.notes.forEach((note, index)=>{%>
        <div class="card bg-light border d-inline-block " id="item-<%=note.id%>">
          <div class="card-body">
            <%- include('note-header', note); -%>
            <div class="btn-group flex-wrap">
              <a href="/note/<%=note.id%>"  class="btn btn-outline-secondary btn-sm stretched-link">Expand</a>
              <a href="/note/<%=note.id%>/edit"  class="btn btn-outline-secondary btn-sm">Edit</a>
              <form
                action="/note/<%=note.id%>/delete?_method=DELETE"
                method="POST"
                class="d-inline-block"
              >
              <input
                type="submit"
                value="Delete"
                id="delete"
                class="btn btn-outline-secondary btn-sm"style="border-radius: 0"
              />
              </form>
              </div>
            </div>
       </div>
    <% }) %>
    <% if(locals.comments){ %> 
    <% comments.forEach(comment => { %>
      <div class="text-primary">
        <h6><small>Sighting: <%=comment.sight_id%> Comment: <%=comment.comment%></small></h6>
      </div>
    <% })} %> 
  </body>
</html>
