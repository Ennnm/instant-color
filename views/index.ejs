<%- include('header', {title: `All hues`}); -%>

<body>
  <%- include('nav', locals.numVisitors); -%>
  <%-include('front-page-intro');-%>

  <div class="container-sm" id="index">
       <div class="row col-12 mt-4 mx-auto">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="/categories" class="btn btn-outline-secondary btn-sm me-md-2">View by categories</a>
      </div>
    </div> 
    <div class="row d-flex align-items-baseline mt-4 mx-1 mx-sm-4">
      <% locals.posts.forEach((post, index)=>{%>
      <div class="col-12 col-lg-6 col-xl-4 mb-4 ">
        <%-include('image-card', post, enableDelete); -%>
      </div>
      <% }) %>
    </div>
  </div>
</body>
